{
  "extends": "../../tools/configs/build/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": ".",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node", "vue"],
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "examples/**/*",
    "tests/**/*",
    "e2e/**/*",
    "__tests__/**/*",
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "esm",
    "cjs",
    "types",
    "coverage",
    "src/test-utils/**/*"
  ]
}
