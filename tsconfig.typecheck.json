{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vite/client", "node", "vue"],
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/__tests__/**",
    "src/test-utils/**",
    "tests/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
